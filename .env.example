VISTARPC_CIPHER_FILE=cipher.txt
VISTA_RPC_CONTEXT='OR CPRS GUI CHART'
VISTA_HEARTBEAT_INTERVAL=30
AZURE_API_VERSION="2024-02-15-preview"
