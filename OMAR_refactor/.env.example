# Server
FLASK_SECRET_KEY=change-me           # Set to a strong random value in prod
SESSION_COOKIE_SECURE=0              # Set to 1 when serving over HTTPS
SESSION_COOKIE_SAMESITE=Strict
USE_FAKEREDIS=1                      # Set to 0 to use a real Redis/Memurai instance
HOST=127.0.0.1                       # Optional waitress host override
PORT=5050                            # Optional waitress port override

# vista-api-x
VISTA_API_BASE_URL=https://vista-api-x.example/api
VISTA_API_KEY=
VISTA_API_VERIFY_SSL=true
VISTA_API_SUPPRESS_TLS_WARNINGS=0   # Set to 1 only for local dev when VERIFY_SSL=false to hide urllib3 warnings
VISTA_API_RPC_CONTEXT=LHS RPC CONTEXT # RPC context used for VPR calls; default LHS for now, can switch to CDSP later

# Azure OpenAI (optional for now)
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=
AZURE_API_VERSION=2024-02-15-preview

# Azure OpenAI deployments (recommended to set when enabling LLM features)
# Use your Azure deployment names, not the model names.
# Suggested: chat -> gpt-4o-mini (default), embeddings -> text-embedding-3-small
AZURE_DEPLOYMENT_NAME=
AZURE_EMBEDDING_DEPLOYMENT_NAME=

# Azure Speech-to-Text (optional, for transcription)
AZURE_SPEECH_KEY=
AZURE_SPEECH_ENDPOINT=
