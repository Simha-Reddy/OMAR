# Rename this file to .env before running docker-compose.
# Values are safe defaults for local testing; review before deploying to staging or production.

# Flask application secrets and session settings
FLASK_SECRET_KEY=change-me
SESSION_COOKIE_SECURE=0
SESSION_COOKIE_SAMESITE=Lax
SESSION_LIFETIME_SECONDS=1800
EPHEMERAL_STATE_TTL=1800
EPHEMERAL_SERVER_STATE=1
AUTO_ARCHIVE_DEFAULT=1

# Network binding
HOST=0.0.0.0
PORT=5050
OMAR_HTTP_PORT=8080

# Redis session store (provided by docker-compose)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_SSL=0
USE_FAKEREDIS=0

# Default VistA demo credentials (override for real deployments)
DEFAULT_STATION=500
DEFAULT_DUZ=983
VISTA_DEFAULT_CONTEXT=OR CPRS GUI CHART
VISTA_VPR_CONTEXT=JLV WEB SERVICES
USE_VAX_GATEWAY=1

# AI integrations (leave blank if not configured)
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=
AZURE_DEPLOYMENT_NAME=
AZURE_API_VERSION=2024-02-15-preview

# Speech transcription (optional)
SCRIBE_TRANSCRIBE_PROVIDER=dev
AZURE_SPEECH_KEY=
AZURE_SPEECH_REGION=

# Document indexing knobs (optional)
DOCUMENT_SYNC_HYDRATE_LIMIT=0
DOCUMENT_RAG_PRIORITY_HYDRATE=200

# Gunicorn tuning (optional overrides)
GUNICORN_WORKERS=4
GUNICORN_THREADS=2
GUNICORN_TIMEOUT=120
GUNICORN_LOGLEVEL=info
